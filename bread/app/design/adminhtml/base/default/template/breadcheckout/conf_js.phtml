<script type="text/javascript">
//<![CDATA[

    if (window.jQuery) jQuery.noConflict();
    Event.observe(window, "load", function(){
        var mode_select = $("payment_breadcheckout_api_mode");
        if(mode_select) {
            bread_mode_check();
            $('payment_breadcheckout_api_mode').observe('change', function(event) {
                bread_mode_check();
            });
        }
    });
    
    function bread_mode_check() {
        // validation advices remove
        $$('.validation-advice').each(function(el){
            el.parentNode.removeChild(el);
        });
          if($('payment_breadcheckout_api_mode').value == 1){
              Form.Element.disable($('payment_breadcheckout_api_sandbox_public_key'));
              Form.Element.disable($('payment_breadcheckout_api_sandbox_secret_key'));
              Form.Element.enable($('payment_breadcheckout_api_public_key'));
              Form.Element.enable($('payment_breadcheckout_api_secret_key'));

              $('payment_breadcheckout_api_public_key').addClassName('required-entry');
              $('payment_breadcheckout_api_public_key').addClassName('validate-length');
              $('payment_breadcheckout_api_secret_key').addClassName('required-entry');
              $('payment_breadcheckout_api_secret_key').addClassName('validate-length');

              $('payment_breadcheckout_api_sandbox_public_key').removeClassName('required-entry');
              $('payment_breadcheckout_api_sandbox_public_key').removeClassName('validate-length');
              $('payment_breadcheckout_api_sandbox_secret_key').removeClassName('required-entry');
              $('payment_breadcheckout_api_sandbox_secret_key').removeClassName('validate-length');

          } else {
              Form.Element.disable($('payment_breadcheckout_api_public_key'));
              Form.Element.disable($('payment_breadcheckout_api_secret_key'));
              Form.Element.enable($('payment_breadcheckout_api_sandbox_public_key'));
              Form.Element.enable($('payment_breadcheckout_api_sandbox_secret_key'));

              $('payment_breadcheckout_api_public_key').removeClassName('required-entry');
              $('payment_breadcheckout_api_public_key').removeClassName('validate-length');
              $('payment_breadcheckout_api_secret_key').removeClassName('required-entry');
              $('payment_breadcheckout_api_secret_key').removeClassName('validate-length');

              $('payment_breadcheckout_api_sandbox_public_key').addClassName('required-entry');
              $('payment_breadcheckout_api_sandbox_public_key').addClassName('validate-length');
              $('payment_breadcheckout_api_sandbox_secret_key').addClassName('required-entry');
              $('payment_breadcheckout_api_sandbox_secret_key').addClassName('validate-length');
            }
    };
//]]>	
</script>
