<?xml version="1.0"?>
<config>
	<tabs>
		<fishpig translate="label" module="splash">
			<label>FishPig</label>
			<sort_order>200</sort_order>
		</fishpig>
	</tabs>
    <sections>
        <splash translate="label" module="splash">
            <label>Attribute Splash Pro</label>
            <tab>fishpig</tab>
            <sort_order>209</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<page>
            		<label>Splash Pages</label>
            		<sort_order>6</sort_order>
            		<show_in_default>1</show_in_default>
            		<show_in_website>1</show_in_website>
            		<show_in_store>1</show_in_store>
            		<fields>
            			<enabled>
            				<label>Enabled</label>
            				<frontend_type>select</frontend_type>
            				<source_model>adminhtml/system_config_source_yesno</source_model>
            				<sort_order>1</sort_order>
            				<show_in_default>1</show_in_default>
            				<show_in_website>1</show_in_website>
            				<show_in_store>1</show_in_store>
            			</enabled>
            		</fields>
            	</page>
            	<seo>
            		<label>Search Engine Optimizations</label>
            		<sort_order>21</sort_order>
            		<show_in_default>1</show_in_default>
            		<show_in_website>1</show_in_website>
            		<show_in_store>1</show_in_store>
            		<fields>
            			<url_suffix>
            				<label>URL Suffix</label>
            				<frontend_type>text</frontend_type>
            				<sort_order>6</sort_order>
            				<show_in_default>1</show_in_default>
            			</url_suffix>
            			<use_canonical>
            				<label>Use Canonical Link Meta</label>
            				<frontend_type>select</frontend_type>
            				<source_model>adminhtml/system_config_source_yesno</source_model>
            				<sort_order>16</sort_order>
            				<show_in_default>1</show_in_default>
            				<show_in_website>1</show_in_website>
            				<show_in_store>1</show_in_store>
            			</use_canonical>
            		</fields>
            	</seo>
            	<sitemap>
            		<label>Sitemap</label>
            		<sort_order>26</sort_order>
            		<show_in_default>1</show_in_default>
            		<show_in_website>1</show_in_website>
            		<show_in_store>1</show_in_store>
            		<fields>
            			<enabled>
            				<label>Enabled</label>
            				<comment>If yes, splash page links will be added to your XML sitemap</comment>
            				<frontend_type>select</frontend_type>
            				<source_model>adminhtml/system_config_source_yesno</source_model>
            				<sort_order>1</sort_order>
            				<show_in_default>1</show_in_default>
            				<show_in_website>1</show_in_website>
            				<show_in_store>1</show_in_store>
            			</enabled>
            			<change_frequency>
            				<label>Page Change Frequency</label>
            				<source_model>adminhtml/system_config_source_frequency</source_model>
            				<frontend_type>select</frontend_type>
            				<sort_order>6</sort_order>
            				<show_in_default>1</show_in_default>
            				<show_in_website>1</show_in_website>
            				<show_in_store>1</show_in_store>
            				<depends><enabled>1</enabled></depends>
            			</change_frequency>
            			<priority>
            				<label>Page Priority</label>
            				<frontend_type>text</frontend_type>
            				<sort_order>8</sort_order>
            				<show_in_default>1</show_in_default>
            				<show_in_website>1</show_in_website>
            				<show_in_store>1</show_in_store>
            				<depends><enabled>1</enabled></depends>
            			</priority>
            		</fields>
            	</sitemap>
            </groups>
        </splash>
    </sections>
</config>