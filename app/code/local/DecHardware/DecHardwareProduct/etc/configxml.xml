<?xml version="1.0"?>
	<config>

		<modules>
			<Simplesolutions_Hardwareproduct>
				<version>0.1.0</version>
			</Simplesolutions_Hardwareproduct>
		</modules>

    <adminhtml>
			<layout>
				<updates>
					<hardwareproduct>
						<file>hardwareproduct.xml</file>
					</hardwareproduct>
				</updates>
			</layout>
			<events>
				<catalog_product_save_after>
					<observers>
						<Simplesolutions_save_product_data>
							<type>singleton</type>
							<class>hardwareproduct/observer</class>
							<method>saveProductTabData</method>
						</Simplesolutions_save_product_data>
					</observers>
				</catalog_product_save_after>
			</events>
			<translate>
				<modules>
					<Simplesolutions_Hardwareproduct>
					<files>
						<default>Simplesolutions_Hardwareproduct.csv</default>
					</files>
        </Simplesolutions_Hardwareproduct>
				</modules>
			</translate>
			<sales>
				<order>
					<create>
						<available_product_types>
							<simple/>
							<virtual/>
							<configurable/>
							<grouped/>
							<hardware/>
						</available_product_types>
					</create>
				</order>
			</sales>
		</adminhtml>

		<global>
			<importexport>
				<import_product_types>
					<hardware>hardwareproduct/import_entity_product_type_hardware</hardware>
				</import_product_types>
			</importexport>
			<blocks>
				<hardwareproduct>
					<class>Simplesolutions_Hardwareproduct_Block</class>
				</hardwareproduct>
			</blocks>
			<models>
				<hardwareproduct>
					<class>Simplesolutions_Hardwareproduct_Model</class>
				</hardwareproduct>
			</models>
			<catalog>
				<product>
					<type>
						<hardware translate="label" module="hardwareproduct">
							<label>Hardware Type</label>
							<model>hardwareproduct/product_type_hardware</model>
							<price_model>hardwareproduct/product_price</price_model>
							<composite>1</composite>
							<allow_product_types>
								<simple/>
								<virtual/>
                        </allow_product_types>
						</hardware>
					</type>
				</product>
			</catalog>
			<helpers>
				<hardwareproduct>
					<class>Simplesolutions_Cabinetproduct_Helper</class>
				</hardwareproduct>
			</helpers>
		</global>
		<frontend>
			<layout>
				<updates>
					<Simplesolutions_Hardwareproduct>
					<file>hardwareproduct.xml</file>
        </Simplesolutions_Hardwareproduct>
				</updates>
			</layout>
		</frontend>
	</config>
