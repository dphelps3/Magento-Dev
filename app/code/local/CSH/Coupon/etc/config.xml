<config>
    <modules>
        <CSH_Coupon>
            <version>0.1.0</version>
        </CSH_Coupon>
    </modules>
    <global>
        <blocks>
            <cshcoupon>
                <class>CSH_Coupon_Block</class>
            </cshcoupon>
        </blocks>
        <helpers>
            <cshcoupon>
                <class>CSH_Coupon_Helper</class>
            </cshcoupon>
        </helpers>
    </global>
    <frontend>
        <routers>
            <cshcoupon>
                <use>standard</use>
                <args>
                    <module>CSH_Coupon</module>
                    <frontName>cshcoupon</frontName>
                </args>
            </cshcoupon>
        </routers>
        <layout>
            <updates>
                <cshcoupon>
                    <file>csh/coupon.xml</file>
                </cshcoupon>
            </updates>
        </layout>
    </frontend>
</config>
