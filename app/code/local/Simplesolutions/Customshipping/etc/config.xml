<?xml version="1.0"?>
<config>
    <modules>
        <Simplesolutions_Customshipping>
            <version>0.1.0</version>
        </Simplesolutions_Customshipping>
    </modules>
    <frontend>
        <routers>
            <customshipping>
                <use>standard</use>
                <args>
                    <module>Simplesolutions_Customshipping</module>
                    <frontName>customshipping</frontName>
                </args>
            </customshipping>
        </routers>
        <layout>
            <updates>
                <customshipping>
                    <file>customshipping.xml</file>
                </customshipping>
            </updates>
        </layout>
    </frontend>
    <global>
    	<events>
    		<checkout_controller_onepage_save_shipping_method>
    			<observers>
    				<checkout_controller_onepage_save_shipping_method>
			            <type>model</type>
			            <class>customshipping/observer</class>
			            <method>saveShippingMethod</method>
			        </checkout_controller_onepage_save_shipping_method>
    			</observers>
    		</checkout_controller_onepage_save_shipping_method>
    		<sales_model_service_quote_submit_after>
    			<observers>
    				<checkout_controller_onepage_save_shipping_method>
			            <type>model</type>
			            <class>customshipping/observer</class>
			            <method>saveOrderAfter</method>
			        </checkout_controller_onepage_save_shipping_method>
    			</observers>
    		</sales_model_service_quote_submit_after>
    		<sales_order_load_after>
    			<observers>
    				<sales_order_load_after>
    					<type>model</type>
			            <class>customshipping/observer</class>
			            <method>loadOrderAfter</method>
    				</sales_order_load_after>
    			</observers>
    		</sales_order_load_after>
    		<sales_quote_load_after>
    			<observers>
    				<sales_quote_load_after>
    					<type>model</type>
			            <class>customshipping/observer</class>
			            <method>loadQuoteAfter</method>
    				</sales_quote_load_after>
    			</observers>
    		</sales_quote_load_after>
    	</events>
        <models>
       		<sales>
       			<rewrite>
        			<order>Simplesolutions_Customshipping_Model_Sales_Order</order>
       			</rewrite>
       		</sales>
            <customshipping>
                <class>Simplesolutions_Customshipping_Model</class>
                <resourceModel>customshipping_mysql4</resourceModel>
            </customshipping>
            <customshipping_mysql4>
                <class>Simplesolutions_Customshipping_Model_Mysql4</class>
                <entities>
                    <customshipping>
                        <table>order_shipping_customshipping</table>
                    </customshipping>
                </entities>
            </customshipping_mysql4>
        </models>
        <resources>
            <customshipping_setup>
                <setup>
                    <module>Simplesolutions_Customshipping</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customshipping_setup>
            <customshipping_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </customshipping_write>
            <customshipping_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </customshipping_read>
        </resources>
        <blocks>
            <customshipping>
                <class>Simplesolutions_Customshipping_Block</class>
            </customshipping>
        </blocks>
        <helpers>
            <customshipping>
                <class>Simplesolutions_Customshipping_Helper</class>
            </customshipping>
        </helpers>
    </global>
    <default>
        <carriers>
          	<customshipping>
               <active>1</active>
               <model>customshipping/carrier_customshipping</model>
               <title>Self Customshipping</title>
               <name>Store Customshipping</name>
               <price>0</price>
               <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
            </customshipping>
         </carriers>
       </default>
</config>