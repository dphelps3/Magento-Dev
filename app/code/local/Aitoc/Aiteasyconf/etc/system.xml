<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <aitsys>
            <groups>
                <aiteasyconf translate="label" module="aiteasyconf">
                    <label>Configurable Products Pro</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>

                        <batchsize_php translate="label comment">
                            <label>Batch size (server side)</label>
                            <comment>
                                <![CDATA[Quantity of products in the batch. Products are updated/created in batches step by step to avoid server timeout.<br />Decrease batch size if you experience problems.<br />Default value: 50]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>9991</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </batchsize_php>

                        <batchsize_js translate="label comment">
                            <label>Batch size (client side)</label>
                            <comment>
                                <![CDATA[Quantity of products in the batch. Products data is sent to server in batches step by step to avoid browser freeze up.<br />Decrease batch size if you experience problems.<br />Default value: 50]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>9992</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </batchsize_js>

                        <html_size_limit translate="label comment">
                            <label>Configurable product edit page html size limit (megabytes)</label>
                            <comment>
                                <![CDATA[Maximum size of html code a browser can handle without freezing or crashing.<br />Default value: 5 (recommended)]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>9993</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </html_size_limit>

                        <use_items_limit translate="label comment">
                            <label>Enable simple products quantity limit</label>
                            <comment>
                                <![CDATA[Prevent from creating more than recommended quantity of simple products.<br />Default value: Yes (recommended)]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9994</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </use_items_limit>

                    </fields>
                </aiteasyconf>
            </groups>
        </aitsys>
    </sections>
</config>