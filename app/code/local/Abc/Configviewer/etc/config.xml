<config>

    <modules>
      <Abc_Configviewer>
        <version>0.1.0</version>
      </Abc_Configviewer>
    </modules>

    <global>
      <events>
        <controller_front_init_routers>
          <observers>
            <abc_configviewer_model_observer>
              <type>singleton</type>
              <class>Abc_Configviewer_Model_Observer</class>
              <method>checkForConfigRequest</method>
            </abc_configviewer_model_observer>
          </observers>
        </controller_front_init_routers>
      </events>
    </global>

</config>
