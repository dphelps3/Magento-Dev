?>
<!-- Hawk Search - Auto-Suggest -->
<script type="text/javascript">
    //<![CDATA[
	HawkSearch.initAutoSuggest = function () {
<?php foreach($helper->getSearchBoxes() as $sbid) : ?>
		HawkSearch.suggestInit('#<?php echo $sbid ?>', {
			lookupUrlPrefix: HawkSearch.TrackingUrl + '<?php echo $helper->getAutoSuggestParams(); ?>',
			hiddenDivName: '<?php echo $helper->getHiddenDivName(); ?>',
			isAutoWidth: true
		});
<?php endforeach; ?>
	};

    //]]>
</script>
