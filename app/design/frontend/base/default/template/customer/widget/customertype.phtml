<div class="input-box" style="width:170px;">
    <select onchange="getSelVal(this.value)" id="<?php echo $this->getFieldId('customertype')?>" class="validate-select" name="<?php echo $this->getFieldName('customertype')?>" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Customertype')) ?>"<?php if ($this->isRequired()):?> class="validate-select"<?php endif; ?> <?php echo $this->getFieldParams() ?>>
